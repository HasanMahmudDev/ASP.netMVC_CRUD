@model PublisherAndBook.Models.Publisher
@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-12">
        <div id="placeholder">@Html.ValidationSummary("", new { @class = "text-danger" })</div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.PublisherName, new { @class = "col-form-label col-2" })
            <div class="col-4">
                @Html.DisplayFor(x => x.PublisherName)

            </div>
        </div>
        <div class="form-group row mb-1">
            @Html.LabelFor(x => x.Establish, new { @class = "col-form-label col-2" })
            <div class="col-4">
                @Html.DisplayFor(x => x.Establish)
            </div>
        </div>
        @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "placeholder", OnSuccess = "onSuccess" }))
        {
            @Html.HiddenFor(x => x.PublisherId)
            <div class="form-group row my-1">

                <div class="col-10 offset-2">

                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                </div>
            </div>
        }
    </div>
    <div class="col-12">
        @Html.ActionLink("Back to list", "Index")
    </div>
</div>
@section scripts{

    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        function onSuccess() {
            $("#form0").trigger('reset');
        }
    </script>
}

