@model IEnumerable<PublisherAndBook.Models.Publisher>

@{
    ViewBag.Title = "Index";
}
<h2>Publisher List</h2>
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("Create", "Create", "Publishers", new { }, new { @class = "btn btn-primary btn-sm" })
        </div>
        <table class="table table-hover  table-responsive-sm table-striped table-bordered">
            <thead class="bg-primary">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.PublisherName)</th>
                    <th>@Html.DisplayNameFor(x => x.Establish)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => b.PublisherName)</td>
                        <td>@Html.DisplayFor(x => b.Establish)</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Publishers", new { id = b.PublisherId }, new { @class = "btn btn-success btn-sm" })
                            @Html.ActionLink("Delete", "Delete", "Publishers", new { id = b.PublisherId }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


