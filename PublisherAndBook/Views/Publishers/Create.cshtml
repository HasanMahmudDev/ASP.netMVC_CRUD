@model PublisherAndBook.Models.Publisher
@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-12">
        <h3>Create Publisher</h3>
        <div id="placeholder"></div>
        @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "placeholder", OnSuccess = "onSuccess" }))
        {
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.PublisherName, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.PublisherName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.PublisherName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Establish, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Establish, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Establish, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-10 offset-2">
                    <button type="reset" class="btn btn-secondary">Reset</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        }
    </div>
    <div class="col-12">
        @Html.ActionLink("Back to list", "Index")
    </div>
</div>
@section styles{
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}

@section scripts{

    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        function onSuccess() {
            $("#form0").trigger('reset');
        }
    </script>
    <script>
        $("#Establish").datepicker({
            format: "yyyy-mm-dd"
        });
    </script>
}




