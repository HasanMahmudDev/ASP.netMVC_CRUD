<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<script src="~/Scripts/bootstrap.bundle.js"></script>*@
    <style>
        body {
            padding-top: 70px;
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">EV 1264730</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link active" }) <span class="visually-hidden">(current)</span>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Publishers", "Index", "Publishers", new { }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Books", "Index", "Books", new { }, new { @class = "nav-link" })
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="text" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
        <div class="container-fluid" style="min-height:calc(100vh - 140px)">
            @RenderBody()
        </div>
        <footer class="container">
            &copy;@DateTime.Now.Year - Md. Hasan Mahmud
        </footer>
        @RenderSection("scripts", false)
</body>
</html>